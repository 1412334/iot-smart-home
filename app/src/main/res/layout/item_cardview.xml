<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/transparent_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/icon_component"
            android:layout_width="@dimen/item"
            android:layout_height="@dimen/item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/seekbar"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/tvstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50dC"
            android:textColor="@color/white"
            android:textSize="@dimen/size_extra_large"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tvdesription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textColor="@color/white"
            android:layout_below="@+id/tvstatus"
            android:layout_alignParentRight="true"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"
            android:theme="@style/SwitchTheme"
            android:max="100"/>
        
        <Switch
            android:id="@+id/swControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:theme="@style/SwitchTheme"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>